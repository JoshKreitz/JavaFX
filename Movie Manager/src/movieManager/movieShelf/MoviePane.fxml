<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.stage.*?>
<?import javafx.geometry.*?>
<?import javafx.stage.Screen?>

<fx:root type="javafx.scene.layout.Pane" fx:id="moviePane" maxHeight="300.0" maxWidth="200.0" xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1" styleClass="popup">
	<fx:define>
		<Popup fx:id="interactivePopup" autoHide="true" autoFix="true">
			<content>
				<VBox>
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>

					<HBox fx:id="popupContent" spacing="10" alignment="BOTTOM_CENTER">
						<Label fx:id="titleLabel" text="${moviePane.metadata.title}" styleClass="movieTitle" />
						<Label fx:id="releaseDateLabel" text="${moviePane.metadata.releaseDate}" styleClass="releaseDate" alignment="BOTTOM_RIGHT" />
					</HBox>
				</VBox>
			</content>
		</Popup>
	</fx:define>

	<ImageView fx:id="imageView" fitHeight="300" fitWidth="200" preserveRatio="true" styleClass="debug" />
</fx:root>
