<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.stage.Screen?>
<VBox prefHeight="200.0" prefWidth="200.0" maxWidth="Infinity" spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="movieManager.MainController">
	<fx:define>
	    <Screen fx:factory="getPrimary" fx:id="screen" />
	</fx:define>
	
	<padding>
	   <Insets bottom="20.0" left="20.0" right="20.0" top="0.0" />
	</padding>
	
	<HBox alignment="CENTER" spacing="10" prefWidth="${screen.visualBounds.width}">
		<children>
			<Button fx:id="loadBerthaButton" text="Load Bertha Torrents" onAction="#loadBerthaSourceDir" />
			<Separator orientation="VERTICAL" />
			<Label text="Source Directory:" />
			<TextField fx:id="sourceDirTextField" onKeyPressed="#sourceDirKeyPress" />
			<Button fx:id="loadSourceDirButton" text="Load" onAction="#loadTextFieldSourceDir" />
			<Label fx:id="sourceDirStatus" alignment="CENTER_RIGHT" minWidth="0" HBox.hgrow="NEVER" />
		</children>
	</HBox>
	
	<Separator orientation="HORIZONTAL" />
	
	<Label fx:id="currentFile" text="Current File" />
	
	<HBox alignment="CENTER" spacing="10">
		<children>
			<Button text="Prev" />
			<Button text="Next" />
			<Button text="Save + Next" />
		</children>
	</HBox>
	
	<GridPane alignment="CENTER">
		<Label text="Death Proof.2007.720p.BRRip.x264.YIFY" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
		<Separator orientation="VERTICAL" GridPane.rowIndex="0" GridPane.columnIndex="1" />
		<TextField text="Death Proof.2007.720p.BRRip.x264.YIFY" GridPane.rowIndex="0" GridPane.columnIndex="2" />
	</GridPane>
	
	<HBox alignment="CENTER" spacing="10" >
		<children>
			<Button text="Restore Original" />
			<Button text="Save" />
			<VBox>
				<children>
					<CheckBox text="Also modify subtitle file, if present" />
					<CheckBox text="Squash folder" />
				</children>
			</VBox>
		</children>
	</HBox>
	
	<Separator orientation="HORIZONTAL" />
	
	<TableView>
		<columns>
			<TableColumn text="Filenames" />
			<TableColumn text="Dir Contents" />
		</columns>
	</TableView>
</VBox>